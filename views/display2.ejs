<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management</title>
    <style>
        /* Global Styles */
        body {
            font-family: Arial, sans-serif;
            background: url('https://images.unsplash.com/photo-1565299624946-b28f40a0ae38') no-repeat center center/cover;
            margin: 0;
            padding: 0;
            min-height: 100vh;
        }

        .container {
            width: 90%;
            margin: 0 auto;
            padding: 40px 0;
        }

        a {
            color: #007BFF;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }

        h1 {
            text-align: center;
            color: #fff;
        }

        .user-list {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            gap: 20px;
        }

        .user-card {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            width: 320px;
            transition: transform 0.3s, box-shadow 0.3s;
            position: relative;
        }

        .user-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.4);
        }

        .user-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .user-details {
            padding: 15px;
        }

        .user-details p {
            margin: 10px 0;
            font-size: 0.9em;
        }

        .actions {
            display: flex;
            justify-content: space-between;
            padding: 15px;
            background: #f1f1f1;
        }

        .actions a {
            color: #007BFF;
            transition: 0.3s;
        }

        .actions a:hover {
            color: #0056b3;
        }

        /* Order Now Button */
        .order-btn {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: red;
            color: #fff;
            padding: 10px 25px;
            border: none;
            font-size: 1rem;
            cursor: pointer;
            opacity: 0;
            transition: opacity 0.3s;
            z-index: 10;
            text-decoration: none;
            border-radius: 5px;
        }

        .user-card:hover .order-btn {
            opacity: 1;
        }
    </style>
</head>
<body>

<div class="container">
    <h1>All Posts</h1>
    <div class="user-list">
        <% posts.forEach(function(post) { %>
            <div class="user-card">
                <a href="/order/<%= post._id %>" class="order-btn">Order Now</a>
                <img src="<%= post.img %>" alt="post Image">
                <div class="user-details">
                    <h2><%= post.pname %></h2>
                    <p><strong>Contact:</strong> <%= post.pcontact %></p>
                    <p><strong>Address:</strong> <%= post.paddress %></p>
                    <p><strong>Food Type:</strong> <%= post.food_type %></p>
                    <p><strong>Quantity:</strong> <%= post.pquantity %></p>
                </div>
                <div class="actions">
                    <a href="/edit/<%= post._id %>">Edit post</a>
                    <a href="/delete/<%= post._id %>">Delete post</a>
                </div>
            </div>
        <% }) %>
    </div>
</div>

</body>
</html>
